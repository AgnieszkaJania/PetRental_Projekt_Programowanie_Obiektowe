<Page x:Class="CarRentalGui.FindAccessory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarRentalGui"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FindAccessory">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Height="35" Width="125" Padding="5" Background="#4E87D4"
           VerticalAlignment="Bottom" HorizontalAlignment="Left" Foreground="White">Search by
        </Label>
        <ListBox Name="SearchCategory" Grid.Row="1" Width="125" HorizontalAlignment="Left">
            <ListBoxItem>Name</ListBoxItem>
            <ListBoxItem>Size</ListBoxItem>
            <ListBoxItem>Pet Type</ListBoxItem>
        </ListBox>
        <Button Grid.Row="2" Margin="0,10,0,0" Width="125" Height="25" 
                HorizontalAlignment="Left" >Next</Button>
    </Grid>
</Page>
